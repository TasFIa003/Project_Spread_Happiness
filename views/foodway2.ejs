     <script>
      $("#submit").click(function(){
        var name=$("#exampleFormControlInput1").val();
        var phone=$("#exampleFormControlInput2").val();
        var postcode=$("#exampleFormControlInput3").val();
        var thana=$("#exampleFormControlInput4").val();
        var address=$("#exampleFormControlTextarea1").val();

        //check if any field is null
        if(name == ''|| phone == ''||postcode == ''||address == ''||thana == ''){
         swal({
             title: "Fields are Empty!",
             text: "Please fill up all the informations!",
             icon: "warning",
             button: "Ok",
           });
        }else{
         swal({
             title: "Thank you!",
             text: "Soon you will get a message or phone call from our team!",
             icon: "success",
             button: "Ok",
           });
        }
      })
    </script>
