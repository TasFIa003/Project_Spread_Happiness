<%-include('partials/adminheader'); -%>
      <div class="container">
          <h4 class="text-center text-dark m-5">Adding Information about NGO/Organization</h4>
          <form action="/food_information" method="post" enctype="multipart/form-data">
             <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label">Name:</label>
                <input type="text" name="title" class="form-control" id="exampleFormControlInput1" placeholder="">
             </div>
              <div class="mb-3">
                <label for="exampleFormControlTextarea1" class="form-label">About:</label>
                <textarea class="form-control" name="details" id="exampleFormControlTextarea1" rows="5"></textarea>
              </div>
              <div class="mb-3">
                <label for="exampleFormControlInput2" class="form-label">Website link</label>
                <input type="text" class="form-control" name="website" id="exampleFormControlInput2" >
              </div>
              <div class="mb-3">
                <label for="exampleFormControlInput3" class="form-label">Facebook link:</label>
                <input type="text" class="form-control" name="facebook" id="exampleFormControlInput3">
              </div>
              <div class="mb-3">
                <label for="formFile" class="form-label">Image file:</label>
                <input class="form-control" type="file" name="image" id="formFile">
              </div>
              <div class="text-center mx-auto mb-5">
                <button type="submit" class="btn btn-outline-dark  w-25">Submit</button>
              </div>
 
          </form>
      </div>
  
    <!-- Bootstrap Bundle with Popper -->
     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
     
     

     

</body>
</html>