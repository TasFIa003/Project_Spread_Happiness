<%-include('partials/adminheader'); -%>
<div class="container">
    <div class="headline m-5">
        <h2 class="border-bottom border-2 border-dark text-center text-danger text-dark">Approved Applicant List for Posted Events</h2>
    </div>
    <%appls.forEach(function(app){%>
    <div class="m-5">
    <div class="container m-3 ">
        <h3 class="text-center">For Code: <span class="text-danger"><%=app.code%></span></h3>
        <h4 class="text-center  text-capitalize text-success">Information about Child</h4>
    </div>
    <table class="table table-dark table-striped">
        <thead>
            <tr>
              <th scope="col">id</th>
              <th scope="col">Name</th>
              <th scope="col">age</th>
              <th scope="col">class</th>
              <th scope="col">money needed</th>
              <th scope="col">details</th>
              <th scope="col">Link</th>
            </tr>
          </thead>
          <tbody>
            
            <tr>
              <th scope="row"><%=app.id%></th>
              <td><%=app.name%></td>
              <td><%=app.age%></td>
              <td><%=app.class%></td>
              <td><%=app.money%></td>
              <td><%=app.details%></td>
              <td><%=app.link%></td>
            </tr>
           
          </tbody>
    </table>
    <div class="container m-3 ">
        <h4 class="text-center  text-capitalize text-success">applicant information</h4>
    </div>
    <table class="table  table-success table-striped">
        <thead>
            <tr>
              <th scope="col">id</th>
              <th scope="col">Applicant Name</th>
              <th scope="col">Email</th>
              <th scope="col">Address and Phone number</th>
              
            </tr>
          </thead>
          <tbody>
            
            <tr>
              <th scope="row"><%=app.id%></th>
              <td><%=app.applicant_name%></td>
              <td><%=app.mail%></td>
              <td><%=app.address_phone%></td>
            </tr>
           
          </tbody>
    </table>
    <hr>
    </div>
    <%});%>
</div>
 <!-- Bootstrap Bundle with Popper -->
 <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
 
</body>
</html>