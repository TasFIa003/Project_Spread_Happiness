     <script>
          function calculate(){
          var gold=parseInt(document.getElementById("gold").value);
          var silver=parseInt(document.getElementById("silver").value);
          var bankMoney=parseInt(document.getElementById("bankMoney").value);
          var hajj=parseInt(document.getElementById("hajj").value);
          var loans=parseInt(document.getElementById("loans").value);
          var investment=parseInt(document.getElementById("investment").value);
          var borrowMoney=parseInt(document.getElementById("borrowMoney").value);
          var wages=parseInt(document.getElementById("wages").value);
          var duePay=parseInt(document.getElementById("duePay").value);

          var total_assets=(gold+silver+bankMoney+hajj+loans+investment)-(borrowMoney+wages+duePay)
          var payable=total_assets*0.25

          document.getElementById("assets").value = total_assets;
          document.getElementById("zakat").value = payable;



        }

        function reset(){
          var gold=document.getElementById("gold").value='0.00';
          var silver=document.getElementById("silver").value='0.00';
          var bankMoney=document.getElementById("bankMoney").value='0.00';
          var hajj=document.getElementById("hajj").value='0.00';
          var loans=document.getElementById("loans").value='0.00';
          var investment=document.getElementById("investment").value='0.00';
          var borrowMoney=document.getElementById("borrowMoney").value='0.00';
          var wages=document.getElementById("wages").value='0.00';
          var duePay=document.getElementById("duePay").value='0.00';
        }
     </script>
